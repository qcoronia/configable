{
  "appName":  "Configable",
  "apiUrl": "http://localhost:3000",
  "areas": [
    {
      "areaName": "Sample Pages",
      "alias": "sample-pages",
      "sections":  [
        {
          "sectionName": "Elements",
          "alias": "elements",
          "list":  {
            "listName": "Elements",
            "dataSourceUrl": "/elements",
            "idAlias": "id",
            "columns": [
              {
                "columnName": "Id",
                "alias": "id",
                "dataType": "number"
              },
              {
                "columnName": "Name",
                "alias": "name",
                "dataType": "string"
              }
            ]
          },
          "form":  {
            "formName": "Element Form",
            "dataSourceUrl": "/elements/:id",
            "createUrl": "/elements",
            "updateUrl": "/elements/:id",
            "idAlias": "id",
            "formControls": [
              {
                "fieldName": "Id",
                "alias": "id",
                "isReadOnly": true,
                "dataType": "number"
              },
              {
                "fieldName": "Name",
                "alias": "name",
                "isReadOnly": false,
                "dataType": "string"
              }
            ]
          }
        }
      ]
    }
  ]
}
